{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"], // ts가 컴파일할 때 사용할 수 있는 라이브러리 명시
    "moduleResolution": "node", // 모듈 해결 방법을 설정
    "forceConsistentCasingInFileNames": true, // 파일 이름의 대소문자 일관성을 강제
    "noFallthroughCasesInSwitch": true, // switch문에서 break, return 없는 경우 경고 발생
    "noImplicitReturns": true, // return 없는 함수 경고
    "noUnusedParameters": true, // 사용하지 않는 매개변수 경고
    "strict": true, // 엄격한 타입 검사
    "allowSyntheticDefaultImports": true, // import module from 'module' 대신 import * as module from 'module'를 사용할 수 있도록 허용
    "esModuleInterop": true, // cjs에서 ems 가져올 수 있도록 허용
    "noUnusedLocals": true, // 사용하지 않는 로컬변수 경고
    "removeComments": false, // 사용하지 않는 주석 제거
    "preserveConstEnums": true, // const enum 값이 외부에 사용되지 않더라도 보존
    "skipLibCheck": true, // 라이브러리 파일 타입 검사는 건너뛰도록 설정
    "jsx": "preserve", // jsx 컴파일할 때 tsd 원본 파일 그대로 유지
    "allowJs": false, // js파일도 컴파일 대상에 포함시킬지 설정
    "noEmit": true, // 컴파일된 js파일이 생성되지 않도록 설정
    "module": "esnext", // js 모듈 형식 설정
    "resolveJsonModule": true, // json 파일을 모듈로 불러올 수 있도록 설정
    "isolatedModules": true, // 파일간 상호 의존성이 없는 모듈을 처리할 때, 각각을 별도 컴파일 단위로 처리
    "noUncheckedIndexedAccess": true, // 배열 인덱스가 유효하지 않을 경우 컴파일 경고
    "baseUrl": "src", // 기본 경로를 src로 설정
    "incremental": true // 이전 컴파일 결과를 캐싱하고 변경된 파일만 재컴파일
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
